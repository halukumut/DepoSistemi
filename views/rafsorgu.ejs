<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <div class="search-container">
        <div class="form-row">
            <h1>RAF</h1>
        </div>
        <div class="form-row">
            <input type="text" id="searchInput" placeholder="Enter search query...">
            <button id="searchButton">SEARCH</button>
        </div>
    </div>
    <br>
    <br>
    <table>
        <thead>
            <tr>
                <th>Package ID</th>
                <th>Number of Pieces</th>
                <th>Features</th>
            </tr>
        </thead>
        <tbody>
            <% pakets.forEach((paket) => { %>
                <tr>
                    <td><a href="/paketsorgu/<%= paket.packageId %>"><%= paket.packageId %></a></td>
                    <td><%= paket.numberOfPieces %></td>
                    <td><%= paket.features %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>